<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back_dim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    app:barrierAllowsGoneWidgets="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Enter the resource type"/>
    <Spinner
        android:id="@+id/resource_drop_down"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Resource"
        />
    <EditText
        android:id="@+id/resource_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Resource"
        />
    <EditText
        android:id="@+id/resource_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Quantity"/>
    <TextView
        android:id="@+id/tier_text"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="TIER 1-DIRE SHORTAGE(ABSOLUTELY NECESSARY)\n
TIER 2-SHORTAGE(REQUIRED IN THE NEAR FUTURE)\n
TIER 3-MIGHT RUN OUT SOON"
        />
    <EditText
        android:visibility="invisible"
        android:id="@+id/resource_tier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Tier"/>

    <Button
        android:id="@+id/resource_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Submit"/>


</LinearLayout>